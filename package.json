{
  "name": "pnpm-dash",
  "version": "0.1.4",
  "description": "A TUI dashboard for pnpm workspaces - run scripts across packages with a split-pane interface",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "pnpm-dash": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node ./dist/index.js"
  },
  "keywords": [
    "pnpm",
    "monorepo",
    "workspace",
    "tui",
    "dashboard",
    "terminal"
  ],
  "author": "artygus",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artygus/pnpm-dash.git"
  },
  "dependencies": {
    "@pnpm/find-workspace-dir": "^7.0.2",
    "@pnpm/workspace.find-packages": "^4.0.5",
    "commander": "^13.1.0",
    "terminal-kit": "^3.1.2"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/terminal-kit": "^2.5.7",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=18"
  }
}
